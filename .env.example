# ============================================
# GeoAI Assistant Pro - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# Azure Computer Vision (for Model Converter)
# ============================================
AZURE_VISION_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com/
AZURE_VISION_SUBSCRIPTION_KEY=your-subscription-key-here

# ============================================
# LLM Provider API Keys
# ============================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-api-key-here
OPENROUTER_API_KEY=your-openrouter-key-here
HUGGINGFACE_API_KEY=your-huggingface-token-here

# ============================================
# Database Configuration (PostgreSQL/PostGIS)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgis_db
DB_USER=postgres
DB_PASSWORD=your-database-password-here

# ============================================
# Ollama Configuration (Local LLM)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Optional: Advanced Settings
# ============================================
REQUEST_TIMEOUT=180
DEBUG_MODE=false
